<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_16sdp"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginEnd="@dimen/_16sdp"
    android:layout_marginBottom="@dimen/_16sdp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/workshop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Global WorkShop"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_16sdp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/workshop_describtion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We Will Provide You With Free Full Comprehensive Maintenance The First Time You Visit Us"
        android:textSize="@dimen/_16ssp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workshops_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/book_appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Book An Appointment"
        android:textColor="@color/black"
        app:icon="@drawable/ic_edit_calendar"
        app:strokeColor="#707070"
        app:strokeWidth="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:theme="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

</LinearLayout>
</androidx.cardview.widget.CardView>